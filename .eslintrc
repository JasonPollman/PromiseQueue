{
  "env": {
    "node": true,
    "mocha": true
  },
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    "no-plusplus": 0,
    "function-paren-newline": 0,
    "valid-jsdoc": 1,
    "require-jsdoc": [
      "warn",
      {
        "require": {
          "FunctionDeclaration": true,
          "MethodDefinition": true,
          "ClassDeclaration": true,
          "FunctionExpression": true
        }
      }
    ]
  }
}